{
  "name": "iwrite-server",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "author": "Alexandra <andracolexacareer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel server -d dist",
    "clean": "rimraf dist",
    "heroku-postbuild": "npm run migrate",
    "migrate": " sequelize db:migrate",
    "migrate:refresh": "yarn run migrate:reset && yarn run migrate",
    "migrate:reset": "sequelize db:migrate:undo:all",
    "migrate:undo": "yarn run sequelize -- db:migrate:undo",
    "dev": "nodemon -r dotenv/config server --exec babel-node -e js",
    "start": "yarn run build  && node -r dotenv/config dist/index.js",
    "prebuild": "npm run clean",
    "start:dev": "nodemon --exec yarn run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.13.10",
    "@babel/register": "^7.13.8",
    "@faker-js/faker": "^6.0.0-alpha.6",
    "apollo-server": "^2.21.1",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.1",
    "sequelize-cli": "^6.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.1"
  },
  "devDependencies": {
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.7"
  }
}
